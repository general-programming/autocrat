<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="gq.genprog.autocrat.integration.log">
    <Appenders>
        <JLine name="Console" logName="autocrat/Admin">
            <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss}] %m%n"/>
        </JLine>
        <File name="File" fileName="logs/autocrat_modlog.log">
            <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss}] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>