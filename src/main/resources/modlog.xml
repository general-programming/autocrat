<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <TerminalConsole name="Console">
            <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss}] [autocrat/Admin] %m%n"/>
        </TerminalConsole>
        <File name="File" fileName="logs/autocrat_modlog.log">
            <PatternLayout pattern="[%d{yyyy/MM/dd HH:mm:ss}] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>